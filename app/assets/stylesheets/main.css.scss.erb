@font-face {
	font-family: "Futura";
	src: url("/assets/futura_lt_book-webfont.eot");
	src: url("/assets/futura_lt_book-webfont.eot?iefix") format("eot"), 
	url("/assets/futura_lt_book-webfont.woff") format("woff"),
	url("/assets/futura_lt_book-webfont.svg") format("svg"),
	url("/assets/futura_lt_book-webfont.otf") format("openttype");
}

@font-face {
	font-family: "Futura";
	font-style: "bold";
	src: url("/assets/futura_lt_bold-webfont.eot");
	src: url("/assets/futura_lt_bold-webfont.eot?iefix") format("eot"), 
	url("/assets/futura_lt_bold-webfont.woff") format("woff"),
	url("/assets/futura_lt_bold-webfont.svg") format("svg"),
	url("/assets/futura_lt_bold-webfont.otf") format("openttype");
}


body {
	margin-top: 75px;
	background: url("/assets/barnstorm_background.jpg");
	width: 1200px;
	font-family: "Futura";
	margin-left: 3.2%;
	margin-right: 3.2%;
	font-family: "Futura";
}

em {
	color: #7d090f;
	font-style: normal;
}
div #header {
/*	padding-left: 41%;
	padding-top: 2%;
*/
  margin-left: auto;
  margin-right: auto;
  width: 900px;
  padding-left: 30%;
  padding-top: 2%;
}

div#header em {
	font-size: 2.7em;
}
div#header #smaller{
	font-size: 1.7em;
}

#main_content {
	position: relative;
	top: -260px;
}

div#side_content {
	width: 27%;
	clear: both;
}

img#logo {
	height: 125px;
	display: inline;
	float: left;
	vertical-align: middle
}

div#map  {
	float: left;
	width: 840px;
	position: relative;
	left: 325px;
	margin-top: 30px;
} 

div.small_team_disc {
	height: 45px;
	width: 45px;
	z-index: 3;
	position: absolute;
}

div.large_team_disc {
	height: 90px;
	width: 90px;
	z-index: 6;
	position: absolute;
}

 .blank_disc {
/*	z-index: 3;
*/	height: 100%;
    display: block;
    margin-left: auto;
    margin-right: auto;
    display: table-cell;
    vertical-align: middle;
    position: absolute;
}


.team_logo {
	z-index: 5;
	height: 60%;
	position: relative;
	top: 20%;
	left: 20%;
}


img#map {
	width: 100%;
}


#appstore_logo {
	height: 85px;
	padding-top: 5px;
}

#logo_box h1 {
	position: relative;
	top: 50%;
	left: 25%;
}


div#top {
	padding: 0;
	margin: 0;
	height: 180px;
}

#news_stories {
	height: 50px;
	float: right;
	padding-top: 12px;

}

#news_stories img {
	position: relative;
	padding-left: 5px;
}

#sms_overlay {
	position: absolute;
	left: 50%;
	top: 50%;
	width:25%;
	height:25%;
	text-align:center;
	display: none;
	z-index: 1000;
}

#sms_overlay div {
     width:300px;
     margin: 100px auto;
     background-color: #fff;
     border:1px solid #000;
     padding:15px;
     text-align:center;
}

#news_stories_image_links div {
	width: 33.3%;
	float: left;
}

#news_stories_image_links div img {
	float: right;
}

