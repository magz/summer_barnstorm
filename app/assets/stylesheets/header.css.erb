header {
	height: 50px;
	background-color: #484848;
	width: 100%;
	position: absolute;
}

header #white_topps_logo {
	position: relative;
	top: 7px;
	left: 15px;
	float: left;
	margin-left: 30px;
}

header #email_input {
	float: right;
	position: relative;
	top: 13px;
	-moz-border-radius:10px; /* Firefox */
	-webkit-border-radius: 10px; /* Safari, Chrome */
	-khtml-border-radius: 10px; /* KHTML */
	border-radius: 10px; /* CSS3 */
	background-color: #707070;
	border-width: 1px;
	height: 18px;
	text-align: center;
	font-family: helvetica;
	margin-right: 5px;
	color: white;

}

header .link_div{
	float: right;
	vertical-align: center;
	font-size: 14px;
	height: 50px;
	position: relative;
	color: #909089;
	padding-left: 5px;
	padding-right: 5px;
	font-family: "HelveticaNeueLTStd-Bd";
}

header .link_div:hover {
	color: white;
	background-color: #303030;
}
header .link_div.link_div_current {
	color: white;
	background-color: #303030;
}

header .link_div a {
	float: right;
	vertical-align: center;
	font-size: 14px;
	height: 20px;
	position: relative;
	color: #909089;
	padding-left: 5px;
	padding-right: 5px;
	font-family: "HelveticaNeueLTStd-Bd";
	text-decoration: none;
}

header .link_div:hover a{
	color: white;
	background-color: #303030;
}




header .link_div .inner_box {
	position: relative;
	top: 17px;
}

header #header_content_wrap {
  width: 100%;
  position:absolute;
  right: 0;
  left: 0;
  margin:0 auto;
  min-width: 600px;

}
header #mailing_list_signup_button {
	float: right;
	width: 200px;
	position: relative;
	top: 10px;
	margin-right: 10px;
}