body {
	margin-top: 75px;
	font-family: "Futura";
	font-family: "Futura";
}

em {
	color: #7d090f;
	font-style: normal;
}
#upper_tagline {
  width: 900px;
  padding-top: 2%;
  margin-left: 500px;
}

#upper_tagline em {
	font-size: 2.7em;
}
#upper_tagline #smaller{
	font-size: 1.7em;
}

#main_content {
	position: relative;
	top: -260px;
}

div#side_content {
	width: 27%;
	clear: both;
}

img#logo {
	height: 125px;
	display: inline;
	float: left;
	vertical-align: middle
}

div#map  {
	float: left;
	width: 840px;
	position: relative;
	left: 325px;
	margin-top: 30px;
} 

.small_team_disc {
	height: 45px;
	width: 45px;
	z-index: 6;
	position: absolute;
}

.large_team_disc {
	height: 350px;
	width: 350px;
	z-index: 9;
	position: absolute;
	display: none;
}
<% Team.all.each do |t| %>

	.large_team_disc#<%= t.name %> {
		background-image: url(<%= asset_path "large_team_icons/"+ t.name + "_blank_color_disc.png"%>);

		left: <%= t.x_map_point * (840.0 / 1491.0) - 175 %>px;
		top: <%= t.y_map_point * (840.0 / 1491.0) - 175 %>px;
	}
	.small_team_disc#<%= t.name %> {
/*		background-image: url(<%= asset_path "small_team_icons/"+ t.name + "_blank_color_disc.png"%>);
*/		
		background-color: <%= t.color %>;
		left: <%= t.x_map_point * (840.0 / 1491.0) - 22.5 %>px;
		top: <%= t.y_map_point * (840.0 / 1491.0) - 22.5 %>px;

}

<% end %>

 .blank_disc {
	height: 100%;
    display: block;
    margin-left: auto;
    margin-right: auto;
    display: table-cell;
    vertical-align: middle;
    position: absolute;
}


.team_logo {
	z-index: 5;
	height: 60%;
	position: relative;
	top: 20%;
	left: 20%;
}


#blank_map {
	width: 100%;
}


#appstore_logo {
	height: 85px;
	padding-top: 5px;
}

#logo_box h1 {
	position: relative;
	top: 50%;
	left: 25%;
}


div#top {
	padding: 0;
	margin: 0;
	height: 180px;
}

#news_stories {
	height: 50px;
	float: right;
	padding-top: 12px;

}

#news_stories img {
	position: relative;
	padding-left: 5px;
}

#sms_overlay {
	position: absolute;
	left: 50%;
	top: 50%;
	width:25%;
	height:25%;
	text-align:center;
	display: none;
	z-index: 1000;
}

#sms_overlay #window {
     width:300px;
     margin: 100px auto;
     background-color: #fff;
     border:1px solid #000;
     padding:15px;
     text-align:center;
}

#news_stories_image_links div {
	width: 33.3%;
	float: left;
}

#news_stories_image_links div img {
	float: right;
}

footer {
	position: relative;
	top: 450px;
}

#how_to {
	display: none;
	margin-left: 350px;
	bottom: 150px;
	position: relative;
	font-family: helvetica;
}



