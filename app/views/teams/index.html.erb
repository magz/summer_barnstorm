<h1>Listing teams</h1>

<table>
  <tr>
    <th>Color</th>
    <th>X map point</th>
    <th>Y map point</th>
    <th>City</th>
    <th>Team name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.color %></td>
    <td><%= team.x_map_point %></td>
    <td><%= team.y_map_point %></td>
    <td><%= team.city %></td>
    <td><%= team.team_name %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

