
<div id="top">
	<div id="logo_box">
		<%= image_tag "summerbarnstorm_logo.png", :id => "logo" %>
		<div id="header">
      <em>Add your favorite baseball memories</em><br>
			<span id="smaller">to contribute to the Summer Barnstorm scrapbook!<span>
		</div>
	</div>

</div>
<br>
<div id="side_content">

	<div id= "pitch_box">
		Win World Series Tickets and<br>
		celebrate your favorite team!
	</div>

		<%= link_to (image_tag "appstore_logo.png", :id => "appstore_logo"), "http://google.com", :id => "appstore_logo_link" %><br>
	

		<span style="font-size: .75em; padding-left: 8%;"> Available for iPhone and iPad. </span>

    <%= render partial: "social_box" %>
</div>

<div  id="main_content">

	<div id="map">
		<%= image_tag "blank_us_map.png", :id => "map" %>
		<% @teams.each do |team| %>
			<%= disc team, "small" %>
		<% end %>

	</div>
	<div id="news_stories">
		<span style="border-right: solid;"> <b>Recent Headlines </b></span>
  	  <span id="news_links" style="padding-left: 20px;">	
        <%= image_tag "techcrunch.png", id: "techcrunch" %>
    		<%= image_tag "intomobile.png", id: "intomobile" %>
    		<%= image_tag "nytimes.png",  id: "nytimes", :style => "top: 5px" %>
      </span>
  </div>
</div>

  <%= link_to (image_tag "howto_tab.png", :style => "float:right; position: absolute; right: 0px; top: 75px; height: 10%;"), how_to_path %>
  <%= render partial: "twitter_feed" %>






<div id="sms_overlay">
     <div>
     <h4>Enter a phone number below:</h4>
      <form action="process" method="GET">
        <input type="tel" name="number" placeholder="Phone Number"><br/>
        <span>Example: +12125551212</span>
        <br/>
        <br/>
        <button type="submit">Submit</button>
      </form>
      <h5>Click here to <a href='' onclick='overlay()' id="sms_modal_close">close</a></h5>
      </div>
</div>

<script>
	$("#appstore_logo_link").click(function(event){
  		$("#sms_overlay").show();
  		event.preventDefault(); // Prevent link from following its href
	});
	$("#sms_modal_close").click(function(event){
  		$("#sms_overlay").hide();
  		event.preventDefault(); // Prevent link from following its href
	});

</script>


<script type="text/javascript">
	$(".team_disc").hover(
		function() {
			var new_size = 80;
			var disc = $(this);
			var new_top = parseInt(disc.css("top")) - (new_size - disc.height())/2;
			var new_left = parseInt(disc.css("left")) - (new_size - disc.height())/2;
			disc.css("top", new_top);
			disc.css("left", new_left);
			disc.height(new_size);
			disc.width(new_size);
		},
		function() {
			var new_size = 40;
			var disc = $(this);
			var new_top = parseInt(disc.css("top")) - (new_size - disc.height())/2;
			var new_left = parseInt(disc.css("left")) - (new_size - disc.height())/2;
			disc.css("top", new_top);
			disc.css("left", new_left);
			disc.height(new_size);
			disc.width(new_size);
	});
	$("#appstore_logo").hover(
		function() {
			$(this).attr("src", "/assets/appstore_logo_hover.png");
		}, 
		function() {
			$(this).attr("src", "/assets/appstore_logo.png");
	});

</script>

