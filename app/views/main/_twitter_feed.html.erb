
<div id="twitter_feed">
<div id="twitter_feed_title"><em>Check out these baseball memories</em></div>


<script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
<script>
new TWTR.Widget({
  version: 2,
  type: 'search',
  search: "<%= @twitter_feed_hashes %>",
  interval: 3000,
  width: 250,
  height: 300,
  theme: {
    shell: {
      background: 'none',
      color: '#000000'
    },
    tweets: {
      background: 'none',
      color: 'black',
      links: '#1985b5'
    }
  },
  features: {
    scrollbar: false,
    loop: true,
    live: true,
    behavior: 'default'
  }
}).render().start();
</script>
</div>
